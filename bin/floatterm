#!/bin/sh

width=100
height=28

OPTIND=0
while getopts "s:" opt; do
  case $opt in
    s)
			width=${OPTARG%x*}
      height=${OPTARG#*x}
			;;
  esac
done
shift $(( OPTIND - 1 ))

alacritty \
	--class alacritty,floating \
	-o window.dimensions.columns="$width" \
	-o window.dimensions.lines="$height" \
	${1:+-e "$@"}
