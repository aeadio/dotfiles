#!/bin/sh

float=
float_width=100
float_height=28

OPTIND=0
while getopts "s:fe:" opt; do
  case $opt in
    s)
			float_width=${OPTARG%x*}
      float_height=${OPTARG#*x}
			;;
		f)
		  float=1
			;;
		e)
			command="$OPTARG"
			;;
  esac
done
shift $(( OPTIND - 1 ))

: ${command:="$@"}
progname=${command%% *}
instance=${float:+"floating/"}${progname:-alacritty}

alacritty \
	--class alacritty,$instance \
	${float:+-o window.dimensions.columns=$float_width} \
	${float:+-o window.dimensions.lines=$float_height}  \
	${command:+-e $command}
