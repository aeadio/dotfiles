# vim: ft=sh ts=2 sw=2 et:

# Informs as to the directory hierarchy of ~

() {
  gopath=(
    $HOME/[Ss]ource/go(N)
    $HOME/src/go(N)
  )
  typeset -gx GOPATH=${(j,:,)gopath}
}

typeset -g path=(
  $HOME/[Bb]in(N)
  ${~GOPATH:+$GOPATH/bin(N)}
  /opt/homebrew/opt/coreutils/libexec/gnubin(N)
  /usr/local/opt/coreutils/libexec/gnubin(N)
  /opt/homebrew/bin(N)
  /opt/bin(N)
  /usr/local/bin(N)
  $path
)
typeset -g path=( ${(u)path} )

: ${XDG_CONFIG_HOME:=${ZSH:h}}
typeset -gx XDG_CONFIG_HOME
