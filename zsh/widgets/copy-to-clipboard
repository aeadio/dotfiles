# vim: ft=sh ts=2 sw=2 et:
# Credit: leah https://leahneukirchen.org/dotfiles/.zshrc

emulate -L zsh -o ksh_glob

zle || return 1

if (( ! $+functions[copy] )) return

local text
if (( REGION_ACTIVE )); then
  local x y
  get-selection | read -r text
else
  text=$BUFFER
fi

if [[ -z $text || $text == *([[:space:]]) ]] return

print -nr -- $text | copy 
