# vim: ft=zsh ts=2 sw=2 et:

emulate -L zsh -o prompt_subst

if (( ! $+commands[fzf] )); then
  return
fi

local ret
local line=$(
  fc -ln -1 0 | fzf  \
    --no-sort        \
    --height=40%     \
    --layout=reverse \
    --no-info
) || ret=$?

# NOTE: Reset prompt immediately after fzf. If we back out or it fails, the
# prompt is munged.
zle && zle reset-prompt

if (( ret )) || [[ -z $line ]]; then
  return $ret
fi

if zle; then
  LBUFFER=$line
  RBUFFER=
else
  print -nr -- $line
fi
