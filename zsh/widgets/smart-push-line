# vim: ft=sh ts=2 sw=2 et:

emulate -L zsh -o extended_glob -o prompt_subst

if (( REGION_ACTIVE )); then
  zle clear-selection -w
fi

case $CONTEXT in
  start)
    if [[ -z $BUFFER || $BUFFER == [[:space:]]# ]]; then
      typeset -g BUFFER=
      return
    fi
    zle push-line
    zle reset-prompt
    ;;
    
  cont)
    zle push-input
    zle get-line
    ;;
    
  *)
    return ;;
  
esac
