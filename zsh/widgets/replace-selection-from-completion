# vim: ft=sh ts=2 sw=2 et:

emulate -L zsh

zle || return 1

local m=$MARK c=$CURSOR b=$BUFFER
local x y selection
get-selection | read -r selection

zle delete-selection -w

if (( $+functions[fzf-tab-complete] )); then
  zle fzf-tab-complete -w
else
  zle expand-or-complete -w
fi

if (( $? == 1 )); then
  zle -K main
  return
fi

typeset -g BUFFER=$b
set-selection $c $m
