# vim: ft=sh ts=2 sw=2 et:
# Credit: leah https://leahneukirchen.org/dotfiles/.zshrc

emulate -L zsh

local dir
if (( REGION_ACTIVE )); then
  local x y
  get-selection | read -r dir
else
  modify-current-argument '${dir:=$ARG}'
fi

zle smart-push-line -w

if [[ $dir != */ ]]; then
  dir=${dir:h}
fi
typeset -g LBUFFER="mkdir -p $dir"
typeset -g RBUFFER=
