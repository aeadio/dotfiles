# vim: ft=sh ts=2 sw=2 et:

# Navigation
setopt auto_pushd
setopt pushd_ignore_dups
setopt pushd_minus

# Globbing, patterns & regex
setopt equals
setopt extended_glob
setopt glob_star_short
setopt interactive_comments
setopt no_case_glob
setopt no_case_match

# Annoyances
setopt no_beep
setopt no_flow_control
